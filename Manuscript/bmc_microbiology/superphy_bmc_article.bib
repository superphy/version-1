	author = {Biek, Roman and O'Hare, Anthony and Wright, David and Mallon, Tom and McCormick, Carl and Orton, Richard J. and McDowell, Stanley and Trewby, Hannah and Skuce, Robin A. and Kao, Rowland R.},
