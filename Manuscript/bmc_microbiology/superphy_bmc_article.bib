	keywords = {Enterococcus, Escherichia coli, genomic, {MLST}, resistance genes, Salmonella},
	pages = {771--777},
	file = {Snapshot:/home/chad/.mozilla/firefox/zl033mw2.default/zotero/storage/2HE9D96J/771.html:text/html}
