	author = {Mazzaglia, Angelo and Studholme, David J. and Taratufolo, Maria C. and Cai, Rongman and Almeida, Nalvo F. and Goodman, Tokia and Guttman, David S. and Vinatzer, Boris A. and Balestra, Giorgio M.},
