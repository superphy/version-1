	number = {4},
	urldate = {2013-10-28},
	journal = {Journal of Antimicrobial Chemotherapy},
	author = {Zankari, Ea and Hasman, Henrik and Kaas, Rolf Sommer and Seyfarth, Anne Mette and Agersø, Yvonne and Lund, Ole and Larsen, Mette Voldby and Aarestrup, Frank M.},
	month = apr,
	year = {2013},
