	journal = {Infection and Immunity},
	author = {Kulasekara, Bridget R and Jacobs, Michael and Zhou, Yang and Wu, Zaining and Sims, Elizabeth and Saenphimmachak, Channakhone and Rohmer, Laurence and Ritchie, Jennifer M and Radey, Matthew and {McKevitt}, Matthew and Freeman, Theodore Larson and Hayden, Hillary and Haugen, Eric and Gillett, Will and Fong, Christine and Chang, Jean and Beskhlebnaya, Viktoriya and Waldor, Matthew K and Samadpour, Mansour and Whittam, Thomas S and Kaul, Rajinder and Brittnacher, Mitchell and Miller, Samuel I},
