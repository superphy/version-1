	number = {23},
	journal = {Applied and environmental microbiology},
	author = {Orden, José A and Horcajo, Pilar and de la Fuente, Ricardo and Ruiz-Santa-Quiteria, José A and Domínguez-Bernal, Gustavo and Carrión, Javier},
	month = dec,
	year = {2011},
	note = {{PMID:} 21965402},
	keywords = {Animals, Cattle, Cluster Analysis, {DNA}, Bacterial, Escherichia coli Proteins, Genotype, Goats, Molecular Sequence Data, Polymerase Chain Reaction, Polymorphism, Genetic, Sequence Analysis, {DNA}, Sheep, Shiga-Toxigenic Escherichia coli, Subtilisins},
