	note = {{PMID:} 9171405},
	keywords = {Amino Acid Sequence, Base Sequence, Escherichia coli, Genes, Bacterial, Molecular Sequence Data, Pili, Sex, Plasmids, Sequence Alignment},
	pages = {3594--3603}
}


